{
  "compilerOptions": {
    "target": "ES2022",            // Versi JS output
    "module": "ESNext",            // Modul ES Module (import/export)
    "moduleResolution": "node",    
    "outDir": "./dist",            // Folder hasil build
    "rootDir": "./src",            // Folder source code
    "strict": false,                // Strict typing
    "esModuleInterop": true,       // Agar import commonjs bisa lancar
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "lib": ["ES2022"],
    "noEmit": true
  
  },
  "include": ["src"],
  "exclude": ["node_modules"],

}
